<UserControl x:Class="PawnShop.Modules.Contract.Taskbar.Views.ContractTaskbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:icons="clr-namespace:PawnShop.Controls.Icons.Views;assembly=PawnShop.Controls"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid Margin="100 8 0 8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Button Content="Utwórz umowę" Grid.Column="0" Margin="0 0 20 0" />
        <Button Content="Przedłuż umowę" Grid.Column="1" Margin="0 0 20 0" />
        <Button Content="Wykup umowę" Grid.Column="2" Margin="0 0 20 0" />
        <icons:NotificationsIcon Grid.Column="4" />
        <icons:LogoutIcon Grid.Column="5" />
    </Grid>
</UserControl>