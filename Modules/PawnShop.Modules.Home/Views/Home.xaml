            </wpf:PieChart>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1">


            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="100,0,0,0"
                HorizontalAlignment="Left"
                FontSize="20"
                Text="Kurs walut" />

            <wpf:CartesianChart
                Grid.Row="1"
                Series="{Binding ExchangeRates}"
                XAxes="{Binding DateChartsXAxes}" />

        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">


            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="100,0,0,0"
                HorizontalAlignment="Left"
                FontSize="20"
                Text="Kurs złota" />

            <wpf:CartesianChart
                Grid.Row="1"
                Series="{Binding GoldRates}"
                XAxes="{Binding DateChartsXAxes}" />

        </Grid>


