                                        Orientation="{Binding Orientation, RelativeSource={RelativeSource AncestorType=wpf:DefaultLegend}}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="15,4" Background="#F5F5DC">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock VerticalAlignment="Center">
                                                <Run Text="{Binding Name}" />
                                                <Run Text="{Binding Value}" />

                                            </TextBlock>
                                            <wpf:MotionCanvas
                                                Width="{Binding CanvasSchedule.Width}"
                                                Height="{Binding CanvasSchedule.Height}"
                                                Margin="8,0,0,0"
                                                VerticalAlignment="Center"
                                                PaintTasks="{Binding CanvasSchedule.PaintSchedules}" />
