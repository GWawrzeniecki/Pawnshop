<UserControl x:Class="PawnShop.Views.BottomInfoLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Time-->
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="{Binding ActualDateTime, StringFormat={}{0:d.M.yyyy dddd hh:mm}}"/>
        </StackPanel>


        <!--User-->
        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Uzytkownik"/>
            <TextBlock Text="{Binding FullName}" />
        </StackPanel>

        <!--Cash-->
        <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Stan kasy:"/>
            <TextBlock Text="{Binding SessionContext.TodayMoneyBalance.MoneyBalance1}"/>
        </StackPanel>

    </Grid>
</UserControl>
