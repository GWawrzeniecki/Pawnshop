<mah:MetroWindow x:Class="PawnShop.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:prism="http://prismlibrary.com/"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:coreRegions="clr-namespace:PawnShop.Core.Regions;assembly=PawnShop.Core"
                 prism:ViewModelLocator.AutoWireViewModel="True"
                 Title="{Binding Title}" MinWidth="1280" MinHeight="800"
                 WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Window.Resources>
        <Style  TargetType="TextBlock" BasedOn="{StaticResource MahApps.Styles.TextBlock}">
            <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!--Top Taskbar-->
        <ContentControl DockPanel.Dock="Top"
                        prism:RegionManager.RegionName="{x:Static coreRegions:RegionNames.TopTaskBarRegion}" />

        <!--Bottom info line-->
        <ContentControl DockPanel.Dock="Bottom"
                        prism:RegionManager.RegionName="{x:Static coreRegions:RegionNames.BottomInfoLineRegion}" />

        <!--Menu-->
        <mah:HamburgerMenu SelectedIndex="1"
                           OpenPaneLength="150"
                           CompactPaneLength="50"
                           IsPaneOpen="{Binding IsPaneOpen, Mode=TwoWay}"
                           DockPanel.Dock="Left"
                           ItemTemplate="{StaticResource MenuItemTemplate}"
                           OptionsItemTemplate="{StaticResource MenuItemTemplate}"
                           Style="{StaticResource MahApps.Styles.HamburgerMenu.Ripple}">

            <!--Menu items-->
            <mah:HamburgerMenu.ItemsSource>
                <mah:HamburgerMenuItemCollection x:Name="HamburgerMenuItemCollection"
                                                 prism:RegionManager.RegionName="{x:Static coreRegions:RegionNames.MenuRegion}" />
            </mah:HamburgerMenu.ItemsSource>

            <mah:HamburgerMenu.Content>
                <Grid>
                    <!--Main Content-->

                    <ContentControl x:Name="ContentRegionControl"
                                    prism:RegionManager.RegionName="{x:Static coreRegions:RegionNames.ContentRegion}" />
                </Grid>
            </mah:HamburgerMenu.Content>
        </mah:HamburgerMenu>
    </DockPanel>
</mah:MetroWindow>