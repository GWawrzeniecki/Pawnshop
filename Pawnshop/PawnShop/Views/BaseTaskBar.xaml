<UserControl x:Class="PawnShop.Views.BaseTaskBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/" xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:localViews="clr-namespace:PawnShop.CoreViews.Views;assembly=PawnShop.CoreViews"
             >




    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <localViews:NotificationsIconTaskBar Grid.Column="2"/>
        <localViews:LogoutIconTaskBar Grid.Column="3"/>
        
    </Grid>
</UserControl>
